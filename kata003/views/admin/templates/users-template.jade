h1.page-header= __('admin.index.navigation.users')
.row
    .col-md-5
        button.btn.btn-default(ng-click='onAdd()') Add
        form(role='form', method='post', action='admin/users/')
            .form-group
                label(for='email')= __('admin.users.editForm.input.email')
                input#email.form-control(type='email', placeholder="#{__('admin.users.editForm.input.email')}", name='email', ng-model='user.email')
            .form-group
                label(for='firstName')= __('admin.users.editForm.input.firstName')
                input#first-name.form-control(type='text', placeholder="#{__('admin.users.editForm.input.firstName')}", name='firstName', ng-model='user.firstName')
            .form-group
                label(for='firstName')= __('admin.users.editForm.input.lastName')
                input#last-name.form-control(type='text', placeholder="#{__('admin.users.editForm.input.lastName')}", name='lastName', ng-model='user.lastName')
            .form-group
                label(for='password')= __('admin.users.editForm.input.password')
                input#password.form-control(type='password', placeholder="#{__('admin.users.editForm.input.password')}", name='password', ng-model='user.password')
            .form-group
                label(for='confirmPassword')= __('admin.users.editForm.input.confirmPassword')
                input#confirm-password.form-control(type='password', placeholder="#{__('admin.users.editForm.input.confirmPassword')}", name='confirmPassword', ng-model='user.confirmPassword')
        button.btn.btn-default(ng-click='onSave(user)')= __('admin.users.editForm.input.submit')
    .col-md-7
        table.table(ng-table='ng')
            thead
                tr
                    th= __('admin.users.editForm.input.email')
                    th= __('admin.users.editForm.input.firstName')
                    th= __('admin.users.editForm.input.lastName')
                    th= __('admin.users.editForm.input.password')
                    th
            tbody
                tr(ng-repeat='user in users')
                    td {{user.email}}
                    td {{user.firstName}}
                    td {{user.lastName}}
                    td {{user.password}}
                    td
                        button.btn.btn-success(ng-click='onEdit(user)')  Edit
                        button.btn.btn-success(ng-click='onDelete(user)')  Delete

        table.table(ng-table='ng')
            thead
                tr
                    th= __('admin.users.editCustomerForm.input.name')
                    th= __('admin.users.editCustomerForm.input.code')
                    th= __('admin.users.editCustomerForm.input.address')
                    th
            tbody
                tr(ng-repeat='customer in customers')
                    td {{customer.name}}
                    td {{customer.code}}
                    td {{customer.address}}
                    td
                        div(ng-switch on="isAssigned(customer)")
                            div(ng-switch-when="false")
                                button.btn.btn-success(ng-click='onAssign(customer)')  Assign
                            div(ng-switch-when="true")
                                button.btn.btn-success(ng-click='onAssign(customer)')  Unassign

